<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="student_leave_wizard_tree_view" model="ir.ui.view">
    <field name="name">student.leave.wizard.tree</field>
    <field name="model">student.leave.wizard</field>
    <field name="arch" type="xml">
        <tree string="Student Leaves wizard">
            <field name="student_id"/>
            <field name="date"/>
            <field name="reason"/>
        </tree>
    </field>
</record>
<record id="student_leave_wizard_form_view" model="ir.ui.view">
    <field name="name">student.leave.wizard.form</field>
    <field name="model">student.leave.wizard</field>
    <field name="arch" type="xml">
        <form string="Student Leave">
            <sheet>
                <group>
                    <field name="student_id"/>
                    <field name="date"/>
                    <field name="reason"/>
                </group>
            </sheet>
        </form>
    </field>
</record>
<record id="action_student_leave_wizard" model="ir.actions.act_window">
    <field name="name">Student Leaves wizard</field>
    <field name="res_model">student.leave.wizard</field>
    <field name="view_mode">tree,form</field>
</record>
<menuitem id="menu_student_root" name="Students"/>

<menuitem id="menu_student_leave"
          name="Student Leaves"
          parent="menu_student_root"
          action="action_student_leave"/>

</odoo>