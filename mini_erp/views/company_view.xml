<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="company_table_form" model="ir.ui.view">
        <field name="name">company.table.form</field>
        <field name="model">mini.company</field>
        <field name="arch" type="xml">
            <form string="company table form">
               <header>
                   <h3>company table record</h3>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_ids"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids"/>    
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
            </form>
        </field>
    </record>
        <record id="company_table_tree" model="ir.ui.view">
        <field name="name">company.table.tree</field>
        <field name="model">mini.company</field>
        <field name="arch" type="xml">
            <tree string="company table tree">
                        <field name="name"/>
                        <field name="employee_ids"/>
            </tree>
        </field>
    </record>
</odoo>