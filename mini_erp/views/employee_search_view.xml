<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_search" model="ir.ui.view">
        <field name="name">mini.employee.search</field>
        <field name="model">mini.employee</field>
        <field name="arch" type="xml">
            <search string="Search Employee">
                <field name="name"/>
                <field name="age"/>
                <filter string="id greater than 2 " name="id" domain="[('id', '>', 2)]"/>
                <group expand="1" string="group_by">
                <filter string="age group by" name="age_groupby" context="{'group_by': 'age'}"/>                </group>
            </search>
        </field>
    </record>
</odoo>
