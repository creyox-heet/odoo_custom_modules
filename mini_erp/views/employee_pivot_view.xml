<?xml version="1.0" encoding="utf-8"?>
<odoo>
            <record id="employee_table_form" model="ir.ui.view">
        <field name="name">employee.table.form</field>
        <field name="model">mini.employee</field>
        <field name="arch" type="xml">
            <form string="employee table form">
               <header>
                   <h3>employee table record</h3>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="project_ids" widget="many2many_tags"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
        <record id="employee_table_pivot_view" model="ir.ui.view">
        <field name="name">employee.table.pivot.view</field>
        <field name="model">mini.employee</field>
        <field name="arch" type="xml">
            <pivot string="employee table pivot view">
                        <field name="name"/>
                        <field name="age"/>
                        <field name="company_id"/>
                        <field name="project_ids" widget="many2many_tags"/>
            </pivot>
        </field>
    </record>
</odoo>