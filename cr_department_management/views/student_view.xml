<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_student_student_tree" model="ir.ui.view">
        <field name="name">student.student.tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree string="Students" sample="1">
                <field name="name"/>
                <field name="image"/>
                <field name="street"/>
                <field name="city"/>
                <field name="zip"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="birthdate"/>
                <field name="age"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="barcode"/>
                <field name="department_id"/>
                <field name="dept_code"/>
                <field name="type" />
                <field name="notes"/>
                <field name="remarks"/>
                <field name="is_cr"  widget="boolean_toggle"/>
                <field name="cr_start_date"/>
                <field name="cr_end_date"/>
                <field name="no_of_votes" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record id="view_student_student_form" model="ir.ui.view">
    <field name="name">student.student.form</field>
    <field name="model">student.student</field>
    <field name="arch" type="xml">
        <form string="Student ">
            <header>
                <button name="action_for_get_info_by_wizard" type="object" string="Send Mail" class="oe_stat_button"/>
            </header>
            <sheet>
                <field name="image" widget="image"/>
                <div>
                    <h1>
                        <field name="name" placeholder="Student Name"/>
                    </h1>
                </div>
                <group>
                    <group string="Contact Details">
                        <field name="email" widget="email"/>
                        <field name="mobile" widget="phone"/>
                        <field name="barcode" readonly="1" force_save="1"/>
                        <field name="department_id"/>
                        <field name="dept_code" readonly="1"/>
                    </group>
                    <group string="Personal Info">
                        <field name="birthdate"/>
                        <field name="age"/>
                        <field name="type" widget="radio"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </group>
                        <group string="Address" >
                            <div>
                                <field name="street" placeholder="Street..." />
                                <field name="city" placeholder="City"/>
                                <field name="state_id"  placeholder="State" />
                                <field name="zip" placeholder="ZIP"/>
                                <field name="country_id" placeholder="Country" />
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="is_cr" widget="boolean_toggle"/>
                                <field name="no_of_votes" invisible="not is_cr"
                                required="is_cr"/>
                            </group>
                            <group>
                                <field name="cr_start_date" invisible="not is_cr"
                                required="is_cr" />
                                <field name="cr_end_date" invisible="not is_cr"
                                    required="is_cr" />
                            </group>
                        </group>
                    <group>
                        <field name="notes" placeholder=" HTML notes..." />
                        <field name="remarks" placeholder=" remarks..."/>
                    </group>

            </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
        </form>
    </field>
</record>



    <record id="view_student_student_kanban" model="ir.ui.view">
    <field name="name">student.student.kanban</field>
    <field name="model">student.student</field>
    <field name="arch" type="xml">
        <kanban sample="1">
            <field name="id"/>
            <field name="name"/>
            <field name="image"/>
            <field name="email"/>
            <field name="department_id"/>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="o_kanban_image">
                            <field name="image" widget="image" />
                        </div>
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title">
                                <field name="name"/>
                            </strong>
                            <div>
                                <field name="department_id"/>
                                <field name="dept_code" readonly="1"/>
                            </div>
                            <div>
                                <field name="email"/>
                            </div>
                            <div>
                                <field name="is_cr" widget="boolean_favorite"/>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

</odoo>
