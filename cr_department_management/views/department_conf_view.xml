<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_department_conf_form" model="ir.ui.view">
        <field name="name">department.conf.form</field>
        <field name="model">department.conf</field>
        <field name="arch" type="xml">
            <form string="Department Configuration">
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="department_id"
                                   invisible="type == 'create'"
                                   required="type == 'write'" />
                    </group>
                </sheet>
                <footer>
                  <button name="action_write_department" type="object" string="Process" class="oe_highlight"/>
                  <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>